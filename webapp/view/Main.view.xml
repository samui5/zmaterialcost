											<Button class="sapUiTinyMarginBegin" icon="sap-icon://delete" press="onDelete"></Button>
											<Button class="sapUiTinyMarginBegin" icon="sap-icon://copy" press="onCopy"></Button>
										</HBox>
									</t:template>
								</t:Column>
